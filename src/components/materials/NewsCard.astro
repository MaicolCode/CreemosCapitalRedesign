---
import type { News } from "../../env";

const { color, data, title } = Astro.props;
---

<section class="w-auto h-auto text-[15px] text-white flex flex-col gap-2">
  <aside
    class="p-2 rounded-[10px] shadow-[-10px_15px_20px_0_var(--third-gray-color)] bg-[var(--sixty-gray-color)] w-[261px]"
  >
    {title}
  </aside>
  <section
    class="w-[480px] h-[600px] flex flex-col gap-2 shadow-[-10px_15px_20px_0_var(--third-gray-color)] bg-[var(--secondary-gray-color)] rounded-[5px_20px_20px_5px] py-4 px-5"
  >
    <div class="w-[440px] px-5 py-4 flex flex-col gap-2 overflow-y-auto">
      {
        data.map((item: News) => {
          return (
            <a href="#" class="relative bg-[var(--sixty-gray-color)] rounded-[10px] h-[76px] pt-2 pb-5 px-4">
              <div
                class={`absolute -top-2 -left-2 rounded-full w-5 h-5 ${color}`}
              />
              <p class="h-[50px]">{item.description}</p>
              <span class="absolute bottom-1 right-4">{item.date}</span>
            </a>
          );
        })
      }
    </div>
  </section>
</section>
