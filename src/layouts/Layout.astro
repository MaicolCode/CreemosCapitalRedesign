---
import BaseLayout from "./BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
const { title } = Astro.props;
---

<BaseLayout title={title}>
  <Header />
  <main>
    <slot />
  </main>
  <Footer />
</BaseLayout>

<style>
  main {
    flex-grow: 1;
    width: 90%;
    max-width: 1200px;
    margin: 0 auto;
  }
</style>
